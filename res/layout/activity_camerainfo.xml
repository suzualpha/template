<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tabhost_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suzualpha.media.CameraInfoActivity"
    tools:ignore="MergeRootFrame" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/camerainfo_liniar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="カメラの数　　　" />

                <TextView
                    android:id="@+id/camerainfo_cameracount_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="なし" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="フロントカメラ   " />

                <TextView
                    android:id="@+id/camerainfo_camerafront_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="なし" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="リアカメラ　　　" />

                <TextView
                    android:id="@+id/camera_info_cameraria_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="なし" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="その他のカメラ    " />

                <TextView
                    android:id="@+id/camera_info_cameraother_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="なし" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/camerainfo_liniar1"
            android:orientation="vertical" >

            <TextView
  
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="フラッシュモードの種類" />

            <TextView
                android:id="@+id/camerainfo_flash_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>